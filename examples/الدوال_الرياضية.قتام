دالة إجمع(الأول، الثاني) { أرجع الأول + الثاني }
دالة إطرح(الأول، الثاني) { أرجع الأول - الثاني }
دالة إضرب(الأول، الثاني) { أرجع الأول * الثاني }
دالة إقسم(الأول، الثاني) {
    إن (الثاني == 0) { ألقي "لا يمكن القسمة على 0" }
    إلا { أرجع الأول / الثاني }
}
دالة إرفع(الأول، الثاني) {
    إن(الناتج < 0) { ألقي "لا يمكن للعدد الثاني أن يكون بالسالب" }
    الناتج = عدم
    عداد = 0
    بينما(عداد < الثاني) {
        إن(عداد == 0) { الناتج = الأول }
	إلا { الناتج = الناتج * الأول }
        عداد = عداد + 1
    }
}
دالة البداية() {
    إطبع("1 + 2 = " + إجمع(1، 2))
    إطبع("1 - 2 = " + إطرح(1، 2))
    إطبع("1 * 2 = " + إضرب(1، 2))
    إطبع("1 / 2 = " + إقسم(1، 2))
    حاول {
        إقسم(1، 0)
    } أمسك(الخطأ) {
        إطبع(الخطأ)
        إطبع("لا تفعل ذللك ثانيةً")
    }
}
البداية()