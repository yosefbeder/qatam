صدّر دالة إصنع_عداد() {
    متغير عداد = 0
    دالة زد() {
        عداد = عداد + 1
        أرجع عداد
    }
    دالة أنقص() {
        عداد = عداد - 1
        أرجع عداد
    }
    دالة القيمة() {
      أرجع عداد
    }
    أرجع {زد، أنقص، القيمة}
}


دالة البداية() {
    متغير متحكم = إصنع_عداد()
    إطبع(متحكم.زد())
    إطبع(متحكم.أنقص())
}

البداية()
